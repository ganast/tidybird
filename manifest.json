{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "tidybird@ganast.com",
      "strict_min_version": "128.0",
      "strict_max_version": "137.*"
    }
  },
  "name": "Tidybird",
  "description": "Organize email into folders quickly and easily.",
  "author": "George Anastassakis",
  "homepage_url": "https://github.com/ganast/tidybird",
  "icons": {
    "16": "skin/icon16.png",
    "32": "skin/icon32.png",
    "64": "skin/icon64.png"
  },
  "version": "5.0",
  "browser_action": {
    "default_icon": "skin/icon64.png",
    "default_title": "Tidybird"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "permissions": [
    "storage",
    "accountsRead",
    "messagesRead",
    "accountsFolders",
    "messagesMove",
    "theme"
  ],
  "experiment_apis": {
    "tidybird_api": {
      "schema": "api/tidybird/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["tidybird_api"]],
        "script": "api/tidybird/parent.js"
      }
    },
    "ex_customui": {
      "schema": "api/customui/api.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["ex_customui"]],
        "script": "api/customui/parent.js"
      },
      "child": {
        "scopes": ["addon_child"],
        "paths": [["ex_customui"]],
        "script": "api/customui/child.js"
      }
    }
  }
}
